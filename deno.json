{
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 200,
    "semiColons": true,
    "singleQuote": true
  },
  "test": {
    "include": [
      "app/**/*.spec.ts",
      "app/**/*.test.ts"
    ]
  },
  "tasks": {
    "build": "deno run -A interface/dev.ts build",
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "preview": "deno run -A interface/main.ts",
    "start": "deno run -A --watch=interface/static/,interface/routes/ ./interface/dev.ts",
    "test": "deno test --allow-read --allow-write --allow-net=deno.land",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "watch-test": "deno test --watch --allow-read --allow-write"
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.7.1/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.3.0",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.8.0",
    "@std/assert": "jsr:@std/assert@1.0.5",
    "@std/datetime": "jsr:@std/datetime@0.225.2",
    "@std/dotenv": "jsr:@std/dotenv@0.225.2",
    "@std/fmt": "jsr:@std/fmt@1.0.2",
    "@std/http": "jsr:@std/http@1.0.6",
    "@std/fs": "jsr:@std/fs@1.0.3",
    "@std/testing": "jsr:@std/testing@1.0.2",
    "bcrypt": "https://deno.land/x/bcrypt@v0.4.1/mod.ts",
    "preact": "https://esm.sh/preact@10.24.0",
    "preact/": "https://esm.sh/preact@10.24.0/",
    "tailwindcss": "npm:tailwindcss@3.4.12",
    "tailwindcss/": "npm:tailwindcss@3.4.12/",
    "tailwindcss/colors": "npm:tailwindcss@3.4.12/colors.js",
    "tailwindcss/plugin": "npm:tailwindcss@3.4.12/plugin.js"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  }
}
