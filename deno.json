{
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 200,
    "semiColons": true,
    "singleQuote": true
  },
  "test": {
    "include": [
      "file/**/*.spec.ts",
      "file/**/*.test.ts"
    ]
  },
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=file/interface/fresh/static/,file/interface/fresh/routes/ ./file/interface/fresh/dev.ts",
    "build": "deno run -A file/interface/fresh/dev.ts build",
    "preview": "deno run -A file/interface/fresh/main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "test": "deno test --allow-read --allow-write"
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.2",
    "@std/testing": "jsr:@std/testing@1.0.0",
    "#file/": "./file/",
    "#shared/": "./shared/",
    "$fresh/": "https://deno.land/x/fresh@1.6.8/",
    "preact": "https://esm.sh/preact@10.19.6",
    "preact/": "https://esm.sh/preact@10.19.6/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "@std/dotenv": "jsr:@std/dotenv@0.225.0"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
